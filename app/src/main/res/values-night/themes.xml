<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StarNotifier" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/github_blue_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/github_blue_dark</item>
        <item name="colorOnPrimaryContainer">@color/github_blue_light</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/github_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors - Pure black for AMOLED -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/github_text_dark</item>
        <item name="colorSurfaceContainer">@color/amoled_surface</item>
        <item name="colorSurfaceContainerHighest">@color/amoled_surface_high</item>
        <item name="colorOnSurfaceVariant">@color/github_text_secondary_dark</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
</resources>
